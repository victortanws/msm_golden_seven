<html>
<head>

</head>

<h1>List of Directors</h1>

<a href="http://localhost:3000/movies/new">Add a New Director</a>

<table>
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Duration</th>
    <th>Description </th>
    <th>Thumbnail </th>
    <th>Created at </th>
    <th>Updated at </th>
    <th colspan="3"> Actions</th>

  </tr>
  <% @list_of_movies.each do |movie| %>
  <tr>

    <td>
      <%= movie.title %>
    </td>
    <td>
      <%= movie.year %>
    </td>
    <td>
      <%= movie.duration.to_s + " minutes" %>
    </td>
    <td>
      <%= movie.description %>
    </td>
    <td>
      <img src="<%= movie.image_url %>" width="80">
    </td>
    <td>
      <%= movie.created_at %>
    </td>
    <td>
      <%= movie.updated_at %>
    </td>

    <td>
    <a href="http://localhost:3000/movies/<%= movie.id %>">Show</a>
    </td>
    <td>
      <a href="http://localhost:3000/movies/<%= movie.id %>/edit">Edit</a>
    </td>
    <td>
      <a href="http://localhost:3000/delete_movie/<%= movie.id %>">Delete</a>
    </td>
    </tr>
    <% end %>
  </tr>

</table>

</html>
